{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "index.ts"],
  "exclude": ["node_modules", "**/*.test.tsx"]
}
